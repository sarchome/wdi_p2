<h2>restaurants#new</h2>

<%= form_for(@restaurant) do |f| %>
  <% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @restaurant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field form-group">
    <%= f.label(:name, 'Restaurant Name', class: 'col-sm-2') %><br>
    <%= f.text_field(:name, class:'form-control') %>
  </div>
  <div class="field form-group">
    <%= f.label(:address, 'Address') %><br>
    <%= f.text_field(:address, class:'form-control') %>
  </div>
  <div class="field form-group">
    <%= f.label(:email, 'E-mail address')  %><br>
    <%= f.email_field(:email, class:'form-control') %>
  </div>
  <div class="phone form-group">
    <%= f.label(:phone, 'Phone number') %><br>
    <%= f.phone_field(:phone, class:'form-control') %>
  </div>
  <div class="field form-group">
    <%= f.label(:city, 'City') %><br>
    <%= f.text_field(:city, class:'form-control') %>
  </div>
  <div class="field form-group">
    <%= f.label(:state, 'State') %><br>
    <%= f.text_field(:state, class:'form-control') %>
  </div>
  <div class="field form-group">
    <%= f.label(:zip, 'Zip Code') %><br>
    <%= f.text_field(:zip, class:'form-control') %>
  </div>
  <div class="field form-group">
    <%= f.label(:menu_item_ids, 'Menu Items') %>
    <%= f.collection_select(:menu_item_ids, MenuItem.all, :id, :item, {}, {multiple: true}) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', restaurants_path %>