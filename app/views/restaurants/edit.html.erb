<h2>restaurants#edit</h2>


<div class="container">
  <div class="row">
    <div class="col-lg-4 col-lg-offset-2" style='background-color:white;opacity:.7'>
      <div class="form-horizontal">
        <%= form_for(@restaurant, url: save_restaurant_path(location: @restaurant.city), method: :patch) do |f| %>
          <% if @restaurant.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this user from being saved:</h2>
              <ul>
              <% @restaurant.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <div class="field">
            <%= f.label(:name, 'Restaurant Name') %><br>
            <%= f.text_field(:name) %>
          </div>
          <div class="field">
            <%= f.label(:address, 'Address') %><br>
            <%= f.text_field(:address) %>
          </div>
          <div class="field">
            <%= f.label(:email, 'E-mail address')  %><br>
            <%= f.email_field(:email) %>
          </div>
          <div class="phone">
            <%= f.label(:phone, 'Phone number') %><br>
            <%= f.phone_field(:phone) %>
          </div>
          <div class="field">
            <%= f.label(:city, 'City') %><br>
            <%= f.text_field(:city) %>
          </div>
          <div class="field">
            <%= f.label(:state, 'State') %><br>
            <%= f.text_field(:state) %>
          </div>
          <div class="field">
            <%= f.label(:zip, 'Zip Code') %><br>
            <%= f.text_field(:zip) %>
          </div>
          <div class="field">
            <%= f.label(:menu_item_ids, 'Menu Items') %>
            <%= f.collection_select(:menu_item_ids, MenuItem.all, :id, :item, {}, {multiple: true}) %>
          </div>


          <div class="actions">
            <%= f.submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Back', restaurants_path %>