      <div class="well">
        <%@restaurant.menu_items.each do |m|%>
        <div class="row">
          <div class='col-md-5 col-md-offset-1'>
            <%= m.item %>
            <%= m.category %>
            <%= m.description %>
          </div>
          <div class='col-md-1 col-md-offset-3'>
            <%= number_to_currency(m.price) %>
          </div>
        </div>

        <div class='row'>
          <div class='col-md-4 col-md-offset-9'>  
            <%if !current_user.nil? %>
              <%= form_tag(add_to_order_path, method: "post") do %>
                <%= number_field_tag(:quantity, 1, min: 1, max: 20, class: 'col-sm-4 form_control') %>
                <%= hidden_field_tag(:restaurant_id, @restaurant.id) %>
                <%= hidden_field_tag(:item_id, m.id) %>
                <%= submit_tag("add", class: 'btn btn-default', style:'background-color:#fe6c33') %>
            <%end%> 

          <%end%>
        </div>
      </div>
      <hr>
        <%end%>

        <div class="row">
          <div class="col-md-12">
          </div>
        </div>
        <hr>

